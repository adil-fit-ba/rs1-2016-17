@using eAkademija.Web.Areas.Student.ViewModels
@model eAkademija.Web.Areas.Student.ViewModels.PitanjeOdgovorVM

@{
    Layout = null;
    Boolean jeOdgovoreno = false;
}


<div class="row" >
    

    <div id="response" style="display: none;">
        <div class="alert alert-success" role="alert"></div>
    </div>

    <div class="col-md-12" style="padding: 15px">

        @foreach (PitanjeOdgovorRow item in Model.PitanjaOdgovori)
        {
            jeOdgovoreno = (item.PitanjeOdgDatumOdgovora == null ? false : true);

            <div class="row kurs-pitanja-box">
                <div class="col-sm-1"><a href="#">
                    <img class="media-object  img-circle" src="@item.PitanjeOdgStudentSlikaPutanja" alt="@item.PitanjeOdgStudentImePrezime" style="width:64px;height:64px;"></a>
                 
                </div>
                <div class="col-sm-11">
                    <strong> @item.PitanjeOdgStudentImePrezime</strong>
                    <blockquote style="border-left: 5px solid #ff8e8e;">P: @item.PitanjeOdgPitanje</blockquote>
                    @if (jeOdgovoreno)
                    {
                        <div class="media">
                            <div class="media-left">
                                <a href="#"><img class="media-object img-circle" src="@item.PitanjeOdgInstruktorSlikaPutanja" style="width:64px;height:64px;" alt="instruktor photo"></a>
                               
                            </div>
                            <div class="media-body">   
                                <strong> @item.PitanjeOdgInstruktorImePrezime</strong>
                                <blockquote style="border-left: 5px solid #2ecc71;">O: @item.PitanjeOdgOdgovor</blockquote>                
                            </div>
                        </div>

                    
                    }
                </div>
               
         
            </div>
        }

    </div>
</div>