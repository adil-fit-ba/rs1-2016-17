@model eAkademija.Web.Areas.Admin.Models.KursDetaljiModel

@{ 
    Layout = null;
}

<div class="row">

    <div class="col-lg-3"></div>

    <div class="col-lg-6" style="background-color: lightgray; border-radius: 2px;">


        <h3> Detalji Kursa </h3>

        <p> Naziv: @Model.Naziv </p>
        <p> Datum Kreiranja Kursa: @Model.Datum.ToString("dd-MM-yyyy") </p>
        <p> Opis: @Model.Opis </p>
        <p> Broj Polaznika: @Model.brojPolaznika </p>

    </div>

    <div class="col-lg-3">
        @Ajax.ActionLink("X", "EmptyView", null ,new AjaxOptions { UpdateTargetId = "detaljiAjax" }, new { @class = "btn btn-danger" })
    </div>

</div>
