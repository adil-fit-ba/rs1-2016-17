@model eAkademija.Web.Areas.Instruktor.ViewModels.ZadacaManageVM

@{
    Layout = null;
}


<div class="row">
    <div class="col-sm-10 col-sm-offset-1">

        <h3>Dodaj/Uredi zadaću</h3>

        @using (Ajax.BeginForm("Snimi", "Zadaca", new AjaxOptions { UpdateTargetId = "KursZadace" }, new { @class = "frmZadaca form-horizontal" }))
        {
            @Html.HiddenFor(x => x.ZadacaId)
            @Html.HiddenFor(x => x.ZadacaKursId)

            <div class="form-group">
                <label for="ZadacaNaslov" class="control-label col-sm-4">Naslov</label>
                @Html.TextBoxFor(x => x.ZadacaNaslov, new { @class = "form-control col-sm-8" })
                @Html.ValidationMessageFor(x => x.ZadacaNaslov)
            </div>

            <div class="form-group">
                <label for="ZadacaOpis" class="control-label col-sm-4">Opis</label>
                @Html.TextBoxFor(x => x.ZadacaOpis, new { @class = "form-control col-sm-8" })
                @Html.ValidationMessageFor(x => x.ZadacaOpis)
            </div>

            <div class="form-group">
                <label for="ZadacaUkupnoBodova" class="control-label col-sm-4">Maksimalan broj bodova</label>
                @Html.TextBoxFor(x => x.ZadacaUkupnoBodova, new { @class = "form-control col-sm-8" })
                @Html.ValidationMessageFor(x => x.ZadacaUkupnoBodova)
            </div>

            <div class="form-group">
                <label for="ZadacaUraditiDo" class="control-label col-sm-4">Rok za izradu</label>
                @Html.TextBoxFor(x => x.ZadacaUraditiDo, new { @class = "has-picker txtDatum form-control col-sm-8", @Value = Convert.ToString(Model.ZadacaUraditiDo.ToShortDateString()) })
                @Html.ValidationMessageFor(x => x.ZadacaUraditiDo)
            </div>

            <input type="submit" class="btn btn-success" value="Sačuvaj" /> <span>&nbsp;</span>

        }

        <p>
            @using (Ajax.BeginForm("Odustani", "Zadaca", new AjaxOptions { UpdateTargetId = "KursZadace" }))
            {
                @Ajax.ActionLink("<< Poništi i vrati se nazad", "Odustani", "Zadaca",
                                     new { @kursId = Model.ZadacaKursId },
                                     new AjaxOptions { UpdateTargetId = "KursZadace" },
                                     new { @class = "btn btn-sm btn-danger" })
            }
        </p>


    </div>
</div>
